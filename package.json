{
    "name": "sync-board",
    "private": true,
    "scripts": {
        "build": "turbo build",
        "build:apps": "turbo build -F frontend",
        "build:pkgs": "turbo build -F @repo/**",
        "check-types": "turbo check-types",
        "clean": "rimraf **/*/dist",
        "db:deploy": "dotenv -e apps/backend/.env.production -- pnpm -F @repo/database db:deploy",
        "db:generate": "dotenv -e apps/backend/.env.development -- pnpm -F @repo/database db:generate",
        "db:migrate": "dotenv -e apps/backend/.env.development -- pnpm -F @repo/database db:migrate",
        "db:push": "dotenv -e apps/backend/.env.development -- pnpm -F @repo/database db:push",
        "db:reset": "dotenv -e apps/backend/.env.development -- pnpm -F @repo/database db:reset",
        "db:studio": "dotenv -e apps/backend/.env.development -- pnpm -F @repo/database db:studio",
        "dev": "turbo dev",
        "docker:down": "docker-compose down",
        "docker:up": "docker-compose up",
        "format": "prettier --write **/*.{json,js,mjs,ts,jsx,tsx}",
        "lint": "turbo lint",
        "prepare": "husky",
        "start": "turbo start",
        "start:dev": "turbo start:dev"
    },
    "lint-staged": {
        "**/*.{json,js,mjs,ts,jsx,tsx}": "prettier --write"
    },
    "dependencies": {
        "dotenv": "^17.2.3",
        "zod": "^4.1.12"
    },
    "devDependencies": {
        "@types/node": "^24.9.2",
        "dotenv-cli": "^11.0.0",
        "eslint": "^9.38.0",
        "globals": "^16.4.0",
        "husky": "^9.1.7",
        "lint-staged": "^16.2.6",
        "prettier": "^3.6.2",
        "prettier-plugin-packagejson": "^2.5.19",
        "rimraf": "^6.0.1",
        "turbo": "^2.5.8",
        "typescript": "^5.9.3"
    },
    "packageManager": "pnpm@10.20.0",
    "engines": {
        "node": ">=18"
    }
}
