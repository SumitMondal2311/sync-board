{
    "name": "sync-board",
    "private": true,
    "scripts": {
        "build": "turbo build",
        "build:apps": "turbo build -F apps/**",
        "build:pkgs": "turbo build -F packages/**",
        "check-types": "turbo check-types",
        "clean": "rimraf **/*/dist",
        "dev": "cross-env NODE_ENV=development turbo dev",
        "format": "prettier --write **/*.{json,js,mjs,ts,jsx,tsx}",
        "lint": "turbo lint",
        "prepare": "husky",
        "start": "cross-env NODE_ENV=production turbo start",
        "start:dev": "cross-env NODE_ENV=development turbo start:dev"
    },
    "lint-staged": {
        "**/*.{json,js,mjs,ts,jsx,tsx}": "prettier --write"
    },
    "dependencies": {
        "dotenv": "^17.2.3",
        "zod": "^4.1.12"
    },
    "devDependencies": {
        "@types/node": "^24.9.2",
        "cross-env": "^10.1.0",
        "eslint": "^9.38.0",
        "globals": "^16.4.0",
        "husky": "^9.1.7",
        "lint-staged": "^16.2.6",
        "prettier": "^3.6.2",
        "prettier-plugin-packagejson": "^2.5.19",
        "rimraf": "^6.0.1",
        "turbo": "^2.5.8",
        "typescript": "^5.9.3"
    },
    "packageManager": "pnpm@10.20.0",
    "engines": {
        "node": ">=18"
    }
}
