{
    "name": "sync-board",
    "private": true,
    "scripts": {
        "build": "turbo build",
        "build:apps": "turbo build -F frontend",
        "build:pkgs": "turbo build -F @repo/**",
        "check-types": "turbo check-types",
        "clean": "rimraf **/*/dist",
        "db:deploy": "dotenv -e apps/backend/.env -- pnpm -F @repo/database db:deploy",
        "db:generate": "dotenv -e apps/backend/.env -- pnpm -F @repo/database db:generate",
        "db:migrate": "dotenv -e apps/backend/.env -- pnpm -F @repo/database db:migrate",
        "db:push": "dotenv -e apps/backend/.env -- pnpm -F @repo/database db:push",
        "db:reset": "dotenv -e apps/backend/.env -- pnpm -F @repo/database db:reset",
        "db:studio": "dotenv -e apps/backend/.env -- pnpm -F @repo/database db:studio",
        "dev": "turbo dev",
        "docker:down": "docker-compose down",
        "docker:up": "docker-compose up",
        "format": "prettier --write **/*.{json,js,mjs,ts,jsx,tsx}",
        "lint": "turbo lint",
        "prepare": "husky",
        "start": "turbo start"
    },
    "lint-staged": {
        "**/*.{json,js,mjs,ts,jsx,tsx}": "prettier --write"
    },
    "dependencies": {
        "dotenv": "^17.2.3",
        "zod": "^4.2.1"
    },
    "devDependencies": {
        "@types/node": "^25.0.3",
        "dotenv-cli": "^11.0.0",
        "eslint": "^9.39.2",
        "globals": "^16.5.0",
        "husky": "^9.1.7",
        "lint-staged": "^16.2.7",
        "prettier": "^3.7.4",
        "prettier-plugin-packagejson": "^2.5.20",
        "prettier-plugin-tailwindcss": "^0.7.2",
        "rimraf": "^6.1.2",
        "turbo": "^2.7.0",
        "typescript": "^5.9.3"
    },
    "packageManager": "pnpm@10.21.0",
    "engines": {
        "node": ">=18"
    },
    "pnpm": {
        "overrides": {
            "zod": "4.2.1"
        }
    }
}
