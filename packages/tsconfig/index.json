{
    "$schema": "https://json.schemastore.org/tsconfig",
    "compilerOptions": {
        "moduleResolution": "bundler",
        "esModuleInterop": true,
        "allowJs": true,
        "declaration": true,
        "target": "es2022",
        "module": "esnext",
        "strict": true,
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "isolatedModules": true
    }
}
