{
    "$schema": "https://turborepo.com/schema.json",
    "globalEnv": ["NODE_ENV"],
    "tasks": {
        "build": {
            "dependsOn": ["^build"]
        },
        "frontend#build": {
            "env": ["NEXT_PUBLIC_BASE_URL"],
            "outputs": [".next/**", "!.next/cache/**"]
        },
        "backend#build": {
            "env": ["PORT", "DATABASE_URL"],
            "outputs": ["dist/**"]
        },
        "@repo/database#build": {
            "outputs": ["dist/**"]
        },
        "@repo/types#build": {
            "outputs": ["dist/**"]
        },
        "@repo/validation#build": {
            "outputs": ["dist/**"]
        },
        "lint": {
            "dependsOn": ["^lint"]
        },
        "check-types": {
            "dependsOn": ["^check-types"]
        },
        "dev": {
            "dependsOn": ["^dev"],
            "cache": false
        },
        "start": {
            "dependsOn": ["^start"],
            "cache": false
        }
    }
}
